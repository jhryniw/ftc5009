<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="5dip" />
        <stroke android:width="1dip" android:color="@color/FtcBlueAccent" />
        <gradient android:angle="-90" android:startColor="@color/FtcBlueAccent" android:endColor="@color/FtcBlue"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="5dip" />
        <stroke android:width="1dip" android:color="@color/FtcBlueAccent" />
        <solid android:color="@color/FtcBlue"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="5dip" />
        <stroke android:width="1dip" android:color="@color/FtcBlueAccent" />
        <gradient android:angle="-90" android:startColor="@color/FtcBlue" android:endColor="@color/FtcBlueAccent" />
    </shape>
</item>
</selector>